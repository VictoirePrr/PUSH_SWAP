clean:
	rm -rf $(OBJ_DIR)

fclean: clean
	$(MAKE) fclean -C $(LIBFT_DIR)
	@echo "$(YELLOW) ðŸ§½ SO_LONG SUCCESSFULLY CLEANED ðŸ§½ $(DEF_COLOR)"
	$(MAKE) kitty
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re kitty
